<div>
  <div class="page-header">
  <h1><%= @article.title %></h1>
  </div>
  
  <p>Published: <%= @article.created_at.strftime('%b %d, %Y') %></p>
  <p>Filed under: 
    <% @article.categories.each do |category| %>
      <%= category.name %>&nbsp;
    <% end %>
  </p>
  <p>
  <%= @article.content %>
  </p>
  <p><%= link_to 'Back to All Articles', articles_path, :class => "btn btn-default" %>
</div>