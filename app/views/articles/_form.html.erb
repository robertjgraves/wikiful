

<%= form_for @article, html: {class: "form-horizontal"}, html: {role: "form"} do |f|  %>
  <div class="form-group">
    <%= f.label :title, :class => "col-sm-2 control-label" %>
    <div class="col-sm-10">
      <%= f.text_field :title, :class => "form-control" %>
    </div>
  </div>

  <div class="form-group">
    <%= f.label :content, :class => "col-sm-2 control-label" %>
    <div class="col-sm-10">
      <%= f.text_area :content, rows: "20", cols: "100", :class => "form-control" %>
    </div>
  </div>

  <div class="category-control">
    <%= f.label 'File under at least one category', :class => "col-sm-2 control-label" %>
    <% Category.all.order(name: :asc).each do |category| %>
      <div class="col-sm-offset-2 col-sm-10">
        <%= check_box_tag "article[category_ids][]", category.id %>
        <%= category.name %>
      </div>
    <% end %>
  </div>

  <div class="form-actions">
    <%= f.submit nil, :class => "btn btn-primary" %>
    <%= link_to 'Cancel', articles_path, :class => "btn btn-default" %>
  </div>
<% end %>