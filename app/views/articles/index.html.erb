<div class="page-header">
<h1>Articles</h1>
</div>

<p><%= link_to "Write and Publish a New Article", new_article_path, :class =>"btn btn-primary" %></p>

<table class="table table-striped">
<thead>
  <th>Published</th>
  <th>Article</th>
  <th>Categories</th>
</thead>
<tbody>
<% @articles.each do |article| %>
  <tr>
    <td><%= article.created_at.strftime('%b %d, %Y') %></td>
    <td><%= link_to article.title, article %>
        </br>
        <%= truncate(article.content, length: 200) %>
    </td>
    <td>  
      <ul>
      <% article.categories.each do |category| %>
        <li><%= category.name %></li>
      <% end %>
      </ul>
    </td>
  </tr>   
<% end %>
</tbody>
</table>
