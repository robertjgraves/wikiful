<div class="page-header">
<h1>Add a Category</h1>
</div>

<% if @category.errors.any? %>
  <div class="error_messages">
    <h2>You're missing some fields!</h2>
    <ul>
      <% @article.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
    </ul>
  </div>
<% end %>

<%= render :partial => 'form' %>